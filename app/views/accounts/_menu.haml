%li.dropdown
  = link_to 'Accounts', accounts_path, :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
  %ul.dropdown-menu(role="menu" aria-labelledby="dLabel")
    - @menu_accounts.all.each do |account|
      %li
        = link_to account_path(account) do
          =account.name
          .label.label-inverse.pull-right
            = number_to_currency account.balance
